<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="52.5dp"
    android:paddingEnd="52.5dp">

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_radius="11dp"
        app:shape_solidColor="@color/white"
        android:paddingTop="32dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp">


        <TextView
            android:id="@+id/tv_exit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="是否退出登录？"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="取  消"
            android:textColor="@color/FE9520"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@+id/btn_exit_ok"
            app:layout_constraintTop_toBottomOf="@+id/tv_exit_title"
            app:shape_radius="21.5dp"
            app:shape_solidColor="@color/white"
            app:shape_strokeWidth="0.5dp"
            app:shape_strokeColor="@color/FE9520"/>

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_exit_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="确  定"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/btn_exit_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/btn_exit_cancel"
            app:shape_radius="21.5dp"
            app:shape_solidColor="@color/FE9520"
            app:shape_strokeWidth="0.5dp"
            app:shape_strokeColor="@color/FE9520"/>


    </com.hjq.shape.layout.ShapeConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>