<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.PaySuccessActivity">

    <TextView
        android:id="@+id/tv_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="支付成功"
        android:textSize="21dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_payresult" />

    <com.hjq.bar.TitleBar
        android:id="@+id/title_payresult"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lineVisible="false"
        />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_gohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:text="返回首页"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn_goorder"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_result"
        app:shape_radius="11dp"
        app:shape_solidColor="@color/FE9520"
        android:visibility="gone"/>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_goorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:layout_marginStart="20dp"
        android:text="查看订单"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_gohome"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_result"
        app:shape_radius="11dp"
        app:shape_solidColor="@color/FE9520"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>