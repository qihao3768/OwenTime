<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_400"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            app:layout_constraintTop_toBottomOf="@+id/mine_title">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="去登录"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_head" />

            <com.hjq.shape.view.ShapeImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_radius="1000dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.hjq.bar.TitleBar
            android:id="@+id/mine_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/tran"
            app:layout_constraintTop_toTopOf="parent"
            app:title="我的"
            app:titleColor="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_jifen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_head"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:shape_strokeWidth="1dp"
        app:shape_strokeColor="@color/c9e9e9e">

        <ImageView
            android:id="@+id/iv_jifen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/iv_jifen"
            app:layout_constraintBottom_toBottomOf="@+id/iv_jifen"
            app:layout_constraintStart_toEndOf="@+id/iv_jifen"
            android:layout_marginStart="5dp"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_jifen">

        <ImageView
            android:id="@+id/iv_sc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/iv_sc"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sc"
            app:layout_constraintStart_toEndOf="@+id/iv_sc"
            android:layout_marginStart="5dp"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_lishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_sc">

        <ImageView
            android:id="@+id/iv_lishi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览历史"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/iv_lishi"
            app:layout_constraintBottom_toBottomOf="@+id/iv_lishi"
            app:layout_constraintStart_toEndOf="@+id/iv_lishi"
            android:layout_marginStart="5dp"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_lishi">

        <ImageView
            android:id="@+id/iv_tutorial"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教程列表"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/iv_tutorial"
            app:layout_constraintBottom_toBottomOf="@+id/iv_tutorial"
            app:layout_constraintStart_toEndOf="@+id/iv_tutorial"
            android:layout_marginStart="5dp"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>