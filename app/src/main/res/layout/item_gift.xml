<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/shape_divider"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_gift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:shape_solidColor="@color/white"
        app:shape_radius="11dp"
        app:layout_constraintTop_toBottomOf="@id/item_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_giftpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/circle11Image2"
            app:strokeColor="@color/white"/>
        <TextView
            android:id="@+id/tv_gifttitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/F1A1A1A"
            app:layout_constraintStart_toEndOf="@id/label_gift"
            app:layout_constraintTop_toTopOf="@id/iv_giftpic"
            app:layout_constraintEnd_toStartOf="@id/tv_giftprice"
            android:maxLines="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/tv_giftprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/F1A1A1A"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_gifttitle"/>
        <TextView
            android:id="@+id/tv_giftnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×1"
            android:textColor="@color/A8A8A8"
            app:layout_constraintTop_toTopOf="@id/tv_giftspecifications"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_giftspecifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="商品规格:"
            android:textColor="@color/A8A8A8"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_gifttitle"
            app:layout_constraintStart_toStartOf="@id/tv_gifttitle"
            app:layout_constraintEnd_toEndOf="@id/tv_gifttitle"
            android:visibility="invisible"/>
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/label_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠品"
            android:textColor="@color/FE9520"
            android:textSize="11dp"
            app:shape_radius="4dp"
            app:shape_solidColor="@color/white"
            app:shape_strokeWidth="0.5dp"
            app:shape_strokeColor="@color/FE9520"
            android:paddingStart="5.5dp"
            android:paddingTop="2.5dp"
            android:paddingEnd="5.5dp"
            android:paddingBottom="2.5dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_giftpic"
            app:layout_constraintTop_toTopOf="@id/iv_giftpic"
            app:layout_constraintEnd_toStartOf="@id/tv_gifttitle"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>