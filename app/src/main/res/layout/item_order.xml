<?xml version="1.0" encoding="utf-8"?>

   <com.hjq.shape.layout.ShapeConstraintLayout
    android:id="@+id/order_root"
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_marginTop="10dp"
       android:padding="15dp"
       app:shape_radius="11dp"
       app:shape_solidColor="@color/white">
       <LinearLayout
           android:id="@+id/layout_number"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           android:orientation="horizontal"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/string_ordernum"
               android:textSize="13dp"
               android:textColor="@color/F4C4C4C"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2013547895412541245"
               android:textColor="@color/F4C4C4C"
               android:layout_marginStart="15dp"/>

           <TextView
               android:id="@+id/tv_copy"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="复制"
               android:textSize="13dp"
               android:textColor="@color/FE9520"
               android:layout_gravity="end"
               />
       </LinearLayout>
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/F5F5F5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_number"/>
       <com.google.android.material.imageview.ShapeableImageView
           android:id="@+id/order_pic"
           android:layout_width="80dp"
           android:layout_height="0dp"
           app:layout_constraintDimensionRatio="h,1:1"
           app:shapeAppearance="@style/circle11Image2"
           android:src="@drawable/test"
           app:layout_constraintTop_toBottomOf="@id/tv_line"
           android:layout_marginTop="15dp"
           app:layout_goneMarginTop="0dp"/>
       <TextView
           android:id="@+id/order_title"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/order_pic"
           android:text="宝贝高碳钢儿童平衡车..."
           android:textSize="13dp"
           android:textColor="@color/F1A1A1A"
           android:maxLines="1"
           android:ellipsize="end"
           app:layout_constraintStart_toEndOf="@id/order_pic"
           app:layout_constraintEnd_toStartOf="@id/order_state"
           android:layout_marginStart="15.5dp" />
       <TextView
           android:id="@+id/order_state"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="待付款"
           android:textColor="#FF4E4E"
           app:layout_constraintTop_toTopOf="@id/order_pic"
           app:layout_constraintEnd_toEndOf="parent"/>

<TextView
    android:id="@+id/order_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="xxxx"
    android:textColor="@color/F1A1A1A"
    android:textSize="13dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/order_pic"/>
       <com.hjq.shape.view.ShapeButton
           android:id="@+id/btn_pay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="付款 00:00"
           android:textSize="13dp"
           app:layout_constraintTop_toBottomOf="@id/order_price"
           app:layout_constraintEnd_toEndOf="parent"
           android:paddingStart="8dp"
           android:paddingEnd="8dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:layout_marginTop="20dp"
           app:layout_goneMarginTop="20dp"
           app:shape_solidColor="@color/FE9520"
           app:shape_radius="26dp"
           android:textColor="@color/white" />
       <com.hjq.shape.view.ShapeButton
           android:id="@+id/btn_address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="修改地址"
           android:textSize="13dp"
           app:layout_goneMarginTop="20dp"
           app:layout_constraintTop_toTopOf="@id/btn_pay"
           app:layout_constraintEnd_toStartOf="@id/btn_pay"
           android:paddingStart="8dp"
           android:paddingEnd="8dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:layout_marginEnd="10dp"
           app:shape_solidColor="@color/white"
           app:shape_radius="26dp"
           android:textColor="@color/F4C4C4C"
           app:shape_strokeWidth="0.5dp"
           app:shape_strokeColor="@color/DCDCDC"
           app:layout_goneMarginEnd="0dp"/>

       <com.hjq.shape.view.ShapeButton
           android:id="@+id/btn_cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="取消订单"
           android:textSize="13dp"
           app:layout_constraintTop_toTopOf="@id/btn_address"
           app:layout_constraintEnd_toStartOf="@id/btn_address"
           android:paddingStart="8dp"
           android:paddingEnd="8dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:layout_marginEnd="10dp"
           app:shape_solidColor="@color/white"
           app:shape_radius="26dp"
           android:textColor="@color/F4C4C4C"
           app:shape_strokeWidth="0.5dp"
           app:shape_strokeColor="@color/DCDCDC"
           app:layout_goneMarginTop="20dp" />
   </com.hjq.shape.layout.ShapeConstraintLayout>