<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="15dp"
    app:layout_constraintTop_toTopOf="parent"
    app:shape_radius="11dp"
    app:shape_solidColor="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/iv_work" />

    <TextView
        android:id="@+id/tv_works_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/F1A1A1A"
        app:layout_constraintStart_toEndOf="@+id/iv_work"
        app:layout_constraintTop_toTopOf="@id/iv_work"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_works_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/F1A1A1A"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_works_time"
        app:layout_constraintStart_toEndOf="@+id/iv_work"
        app:layout_constraintTop_toBottomOf="@id/tv_works_title_top"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/tv_works_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/A8A8A8"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintStart_toStartOf="@+id/tv_works_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_works_title"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_work"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,1:0.625"
        app:shapeAppearance="@style/circle11Image2" />

    <TextView
        android:id="@+id/group_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展开"
        android:textSize="12dp"
        android:textColor="@color/A8A8A8"
        app:layout_constraintTop_toTopOf="@id/iv_work"
        app:layout_constraintEnd_toStartOf="@id/iv_show"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="@id/iv_work"
        app:layout_constraintEnd_toEndOf="parent"/>
</com.hjq.shape.layout.ShapeConstraintLayout>