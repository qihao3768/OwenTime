<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="@color/white"
    app:layoutDescription="@xml/activity_splash_scene">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01"/>
    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/splash2"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/skip"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="3s"
        android:textColor="@color/FE9520"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_line"
        app:shape_radius="9999dp"
        app:shape_strokeColor="@color/c9e9e9e"
        app:shape_strokeWidth="0.5dp"
        android:layout_marginEnd="5dp"/>

</androidx.constraintlayout.motion.widget.MotionLayout>