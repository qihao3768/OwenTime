<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ProductDetailActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/group_pic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/group_banner"
                app:layout_constraintEnd_toEndOf="@+id/group_banner" />

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:padding="15dp"
                android:textColor="#1A1A1A"
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_product_price" />


            <WebView
                android:id="@+id/group_detail_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_title" />


            <com.hjq.shape.layout.ShapeConstraintLayout
                android:id="@+id/layout_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/group_banner"
                app:shape_endColor="#FEA820"
                app:shape_startColor="#FE9520">

                <TextView
                    android:id="@+id/tv_tg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_yj_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_tg_price"
                    app:layout_constraintStart_toEndOf="@+id/tv_tg_price"
                    app:layout_constraintTop_toTopOf="@+id/tv_tg_price" />

                <TextView
                    android:id="@+id/tv_tg_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_tg_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_tg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tg_count" />
            </com.hjq.shape.layout.ShapeConstraintLayout>

            <com.youth.banner.Banner
                android:id="@+id/group_banner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintDimensionRatio="h,1:0.88"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.hjq.bar.TitleBar
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:titleSize="16dp"
        app:titleColor="@color/black"
        app:titleStyle="bold"
        app:rightIcon="@drawable/share_icon_details"
        app:leftTitleColor="@color/white"
        app:leftIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"/>
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_solidColor="@color/white"
        app:shape_shadowColor="#06000000">

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/layout_kt_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/string_buy"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shape_radius="22dp"
            app:shape_solidColor="@color/FE9520"/>
    </com.hjq.shape.layout.ShapeConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>