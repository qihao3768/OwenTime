<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:shape_radius="11dp"
    app:shape_solidColor="@color/F5F5F5"
    android:paddingBottom="15dp">
    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"/>
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_product"
        android:textSize="13dp"
        android:textColor="#1A1A1A"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_product_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="ï¿¥"
        android:textSize="11dp"
        android:gravity="bottom"
        android:textColor="@color/FE9520"
        android:layout_marginTop="10dp"
        app:layout_goneMarginTop="33dp"/>
    <TextView
        android:id="@+id/tv_product_price02"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
        app:layout_constraintStart_toEndOf="@+id/tv_product_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        android:textSize="18dp"
        android:textColor="@color/FE9520"
        android:layout_marginTop="10dp"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/tv_product_ptnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_desc"
        android:textSize="12dp"
        android:textColor="@color/FE9520"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/A8A8A8"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tv_product_title"
        app:layout_constraintEnd_toEndOf="@id/tv_product_title"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title"
        android:layout_marginTop="10dp"
        />

</com.hjq.shape.layout.ShapeConstraintLayout>