<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="相机"
        android:textSize="16dp"
        app:shape_radius="5dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="相册"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:shape_topLeftRadius="5dp"
        app:shape_topRightRadius="5dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/tv_album"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="使用默认头像"
        android:textSize="16dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/black"
        app:shape_topLeftRadius="5dp"
        app:shape_topRightRadius="5dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_album"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/tv_default"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:shape_radius="5dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_default"/>


</androidx.constraintlayout.widget.ConstraintLayout>