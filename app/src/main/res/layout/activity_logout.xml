<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LogoutActivity"
    android:background="@color/F5F5F5">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>
    <com.hjq.bar.TitleBar
        android:id="@+id/logout_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:title="注销账号"
        app:titleStyle="bold"
        app:titleSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIconTint="@color/black"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logout_title"
        app:layout_constraintStart_toStartOf="@id/logout_left"
        app:layout_constraintEnd_toEndOf="@id/logout_right"
        android:orientation="vertical"
        android:paddingTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销前，请确认以下内容"
            android:textColor="@color/F1A1A1A"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号无任何资产"
            android:textColor="@color/F1A1A1A"
            android:textSize="12dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号资产包括但不限于欧文在期会员、未使用的优惠券等。"
            android:textColor="@color/F545454"
            android:textSize="12dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号处于安全状态"
            android:textColor="@color/F1A1A1A"
            android:textSize="12dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号为正常使用中且无违规、被封、被盗等情形。"
            android:textColor="@color/F545454"
            android:textSize="12dp"
            android:layout_marginTop="12.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号将不可找回"
            android:textColor="@color/F1A1A1A"
            android:textSize="12dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销后，账号绑定的手机、微信号等无法进行登录，账号内资产
将无法找回。"
            android:textColor="@color/F545454"
            android:textSize="12dp"
            android:layout_marginTop="12.5dp"/>


    </LinearLayout>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确认注销"
        android:textSize="14dp"
        android:textColor="@color/FE9520"
        app:shape_strokeColor="@color/FE9520"
        app:shape_strokeWidth="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:shape_radius="16.5dp"
        app:layout_constraintBottom_toBottomOf="@id/logout_bottom"
        app:layout_constraintStart_toStartOf="@id/logout_left"
        app:layout_constraintEnd_toEndOf="@id/logout_right"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96"/>

</androidx.constraintlayout.widget.ConstraintLayout>